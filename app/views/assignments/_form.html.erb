<%= form_with(model: assignment, class: 'assignment-form') do |form| %>

  <% if assignment.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>
      <ul>
        <% assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :course_id, class: 'form-label' %>
    <%= form.number_field :course_id, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :assignment_1, class: 'form-label' %>
    <%= form.text_field :assignment_1, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :assignment_2, class: 'form-label' %>
    <%= form.text_field :assignment_2, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :assignment_3, class: 'form-label' %>
    <%= form.text_field :assignment_3, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :exam, class: 'form-label' %>
    <%= form.text_field :exam, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :test, class: 'form-label' %>
    <%= form.text_field :test, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, class: 'form-label' %>
    <%= form.datetime_field :due_date, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :created_at, class: 'form-label' %>
    <%= form.datetime_field :created_at, class: 'form-input' %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Create Assignment', class: 'btn-submit' %>
  </div>
<% end %>
