<%= form_with(model: course, class: 'assignment-form') do |form| %>

  <% if course.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Course Title -->
  <div class="form-group">
    <%= form.label :title, "Title", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-input' %>
  </div>

  <!-- Course Description -->
  <div class="form-group">
    <%= form.label :description, "Description", class: 'form-label' %>
    <%= form.text_area :description, class: 'form-input' %>
  </div>

  <!-- Instructor Selection -->
  <div class="form-group">
    <%= form.label :user_id, "Instructor", class: 'form-label' %>
    <%= form.select :user_id, options_from_collection_for_select(User.where(role: 'instructor'), :id, :full_name), { prompt: "Who is the instructor?" }, class: 'form-input' %>
  </div>

  <!-- Created At -->
  <div class="form-group">
    <%= form.label :created_at, "Created At", class: 'form-label' %>
    <%= form.datetime_field :created_at, class: 'form-input' %>
  </div>

  <!-- Updated At -->
  <div class="form-group">
    <%= form.label :updated_at, "Updated At", class: 'form-label' %>
    <%= form.datetime_field :updated_at, class: 'form-input' %>
  </div>

  <!-- Submit Button -->
  <div class="form-actions">
    <%= form.submit 'Save Course', class: 'btn-action btn-primary' %>
  </div>

<% end %>
