<%= render "layouts/header" %>

<% if current_user.student? %>
  <% content_for :title, "Dashboard" %>
  <div class="dashboard-container">
    <h1>Welcome to Your Homepage, <%= current_user.first_name %> <%= current_user.last_name %></h1>

    <!-- Courses Overview Section -->
    <section class="dashboard-section">
      <h2>Your Courses</h2>
      <% if @courses.present? %>
        <table>
          <thead>
            <tr>
              <th>Course Title</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= link_to course.title, course_path(course) %></td>
                <td><%= course.description %></td>
                <td><%= link_to 'View', course_path(course), class: 'btn-action' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>You are currently not enrolled in any courses. Please contact your student administrator.</p>
      <% end %>
    </section>

    <!-- Attendance Summary Section -->
    <section class="dashboard-section">
      <h2>Attendance Overview</h2>
      <% if @attendances.present? %>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @attendances.each do |attendance| %>
              <tr>
                <td><%= attendance.date %></td>
                <td><%= attendance.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No attendance records available.</p>
      <% end %>
    </section>

    <!-- Grades Overview Section -->
    <section class="dashboard-section">
      <h2>Your Grades</h2>
      <% if @grades.present? %>
        <table>
          <thead>
            <tr>
              <th>Course Title</th>
              <th>Grade</th>
            </tr>
          </thead>
          <tbody>
            <% @grades.each do |grade| %>
              <tr>
                <td><%= grade.course.title %></td>
                <td><%= grade.grade_value %> %</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No grades currently available.</p>
      <% end %>
    </section>
  </div>

<% elsif current_user.guardian? %>
  <h1>Welcome, <%= current_user.first_name %> <%= current_user.last_name %></h1>

  <% if @student.nil? %>
    <p>You are not currently linked to any student. <%= link_to 'Click here to link your account with a student', @link_student_url %></p>
  <% else %>
    <section class="dashboard-section">
      <h2>Your Linked Student</h2>
      <p>Student Name: <%= @student.first_name %> <%= @student.last_name %></p>
      <p>Email: <%= @student.email %></p>
      <p>Grade Level: <%= @student.grade_level %></p>
    </section>

    <!-- Show student data for Guardian -->
    <section class="dashboard-section">
      <h2>Student's Courses</h2>
      <% if @courses.present? %>
        <table>
          <thead>
            <tr>
              <th>Course Title</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.title %></td>
                <td><%= course.description %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No courses found for your student.</p>
      <% end %>
    </section>
  <% end %>

<% elsif current_user.instructor? %>
  <h1>Welcome, <%= current_user.first_name %> <%= current_user.last_name %></h1>

  <!-- Show all students enrolled in the instructor's courses -->
  <section class="dashboard-section">
    <h2>Students Enrolled in Your Courses</h2>
    <% if @students.present? %>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Grade Level</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.email %></td>
              <td><%= student.grade_level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No students found in your courses.</p>
    <% end %>
  </section>

<% elsif current_user.admin? %>
  <h1>Welcome, <%= current_user.first_name %> <%= current_user.last_name %></h1>

  <!-- Admin View - Show all users -->
  <section class="dashboard-section">
    <h2>All Users</h2>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.present? %>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4">No users available.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>

<% end %> <!-- End of user roles check -->

<%= render "layouts/footer" %>
