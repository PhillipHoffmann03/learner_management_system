<%= render "layouts/header" %>

<h1>Link Your Account with a Student</h1>

<% if @students.present? %>
<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
        
            <td>
              <%= button_to 'Link Student', link_student_path(student_id: student.id), method: :post, class: 'link-button' %>
            </td>
        

         
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<% else %>
  <p>No unlinked students available to link.</p>
<% end %>
<%= render "layouts/footer" %>