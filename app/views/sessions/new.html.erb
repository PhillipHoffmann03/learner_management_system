<script>

document.addEventListener("DOMContentLoaded", function () {
  const dismissButton = document.getElementById("dismiss-button");
  const popup = document.getElementById("notice-popup");

  if (dismissButton) {
    dismissButton.addEventListener("click", function () {
      popup.style.display = "none";
    });
  }
});
</script>


<div class="wrapper">



<% if notice %>
  <div id="notice-popup">
    <span id="dismiss-button">&times;</span>
    <p><%= notice %></p>
  </div>
<% end %>


  <%= form_with(url: sessions_path, local: true, class: "login-form") do |form| %>
    
    <h2>Login</h2>

    
    <div class="input-field">
      <%= form.text_field :username, required: true, class: "form-input", placeholder: "" %>
      <label>Enter your username</label>
    </div>



    <div class="input-field">
      <%= form.password_field :password, required: true, class: "form-input", placeholder: "" %>
      <label>Enter your password</label>
    </div>

    <div class="forget">
      <label for="remember">
        <%= check_box_tag :remember_me %>
        <p>Remember me</p>
      </label>
      <%= link_to "Forgot password?", forgot_password_path %>
    </div>


    <button type="submit">Log In</button>

    <div class="register">
      <p>Don't have an account? <%= link_to "Register", new_user_path %></p>
    </div>
  <% end %>
</div>
